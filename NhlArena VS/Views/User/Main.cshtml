@using Microsoft.AspNetCore.Http;
@using GameLogic;
@{
    Layout = "_DefaultLayout";
}
<div class="container row">
    <div class="col s10 offset-s1">
        @{
            List<Game> games = GameManager.GetGames();
            if (games.Count() == 0)
            {
                <div class="card-panel red darken-4">
                    <p>curently no games ongoing, start a new game<p>
                </div>
            }
            else
            {
                <table class="card-panel red darken-4" style="margin: 10px; padding: 0 10px 0 10px; display: block;">
                    <thead>
                        <tr class="orange-text text-accent-3">
                            <th class="" style="width: 4%"></th>
                            <th class="" style="width: 20%">Started by:</th>
                            <th class="" style="width: auto">Players:</th>
                            <th class="" style="width: 10%"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < games.Count(); i++)
                        {
                            <tr>
                                <td>@{Convert.ToString(i);}.</td>
                                <td>Eclair</td>
                                <td>$0.87</td>
                                <td><a class="btn orange accent-3">Join</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
</div>
