@{
    Layout = "_DefaultLayout";
    ViewData["Title"] = "Home Page";
}

@section Stylesheets{
    <link rel="stylesheet" href="~/css/Index.css" />
}
<div class="container row index__container">
    <div class="col s6 collum__image">
        <div class="image__container">
            <img class="Index__NHLArenaLogo" src="~/images/NHLArenaLogo.png" alt="NHLArenaLogo" />
        </div>
    </div>
    <div class="index__homeinfo col s6">
        <div class="index__fillspace">
        </div>
        <div class="row">
            <div class="col s12 m10 offset-m1">
                <div class="card red darken-4">
                    <div class="card-image">
                        <img src="~/images/screenshot.png" alt="Alternate Text" style="min-height: 150px; margin-top: 5px" />                        
                    </div>
                    <div class="card-content">
                        <span class="card-title orange-text text-accent-3">Welkom</span>
                        <p>
                            BOI!!!! Welkom bij onze game.
                            Maak nu snel een account aan en beleef een shooter zoals je die NOG NOOIT hebt beleefd!!!
                        </p>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect waves-light btn orange accent-3" href="/Home/SignUp">Join</a>
                        <a class="waves-effect waves-light btn orange accent-3" href="/Home/Login">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


